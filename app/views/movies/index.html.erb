<h1>Listing movies</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Length</th>
      <th>Release Date Theater</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= movie.title %></td>
        <td><%= movie.length %></td>
        <td><%= movie.release_date_theater %></td>
        <td><%= link_to 'View more info', movie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Movie', new_movie_path %>
